{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "module": "system",
    "rootDir": "src",
    "outDir": "out",
    "jsx": "react",
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}